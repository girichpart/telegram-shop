{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Заказы клиентов"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "phone": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "pvz": {
      "type": "string"
    },
    "items": {
      "type": "json",
      "required": true
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "paid", "shipped", "completed", "canceled"],
      "default": "pending"
    }
  }
}
